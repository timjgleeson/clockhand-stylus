


// @it should support 1 2 3 and 4up for a given property
.foo
  clockhand(1, 'bar')
  clockhand(1 2, 'bar')
  clockhand(1 2 3, 'bar')
  clockhand(1 2 3 4, 'bar')
// @expect
.foo {
  bar-top: 1; bar-right: 1; bar-bottom: 1; bar-left: 1;
  bar-top: 1; bar-right: 2; bar-bottom: 1; bar-left: 2;
  bar-top: 1; bar-right: 2; bar-bottom: 3; bar-left: 2;
  bar-top: 1; bar-right: 2; bar-bottom: 3; bar-left: 4;
}



// @it should support 1 2 3 and 4up for a given property with !important
.foo
  clockhand(1 !important, 'bar')
  clockhand(1 2 !important, 'bar')
  clockhand(1 2 3 !important, 'bar')
  clockhand(1 2 3 4 !important, 'bar')
// @expect
.foo {
  bar-top: 1 !important; bar-right: 1 !important; bar-bottom: 1 !important; bar-left: 1 !important;
  bar-top: 1 !important; bar-right: 2 !important; bar-bottom: 1 !important; bar-left: 2 !important;
  bar-top: 1 !important; bar-right: 2 !important; bar-bottom: 3 !important; bar-left: 2 !important;
  bar-top: 1 !important; bar-right: 2 !important; bar-bottom: 3 !important; bar-left: 4 !important;
}
